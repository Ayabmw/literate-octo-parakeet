{# templates/book/show.html.twig #}

<h1>Details for Book</h1>

<p><strong>Ref:</strong> {{ book.ref }}</p>
<p><strong>Title:</strong> {{ book.Title }}</p>
<p><strong>Author:</strong> {{ book.IdAuthor.username }}</p>
<p><strong>Category:</strong> {{ book.category }}</p>
<p><strong>Published:</strong> {{ book.published ? 'Yes' : 'No' }}</p>
<p><a href="{{ path('edit_book', {'ref': book.ref}) }}">Edit</a></p>
